


<%= form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.label("標題") %>
    <%= f.text_field :title %>
  </div>
  
  <div class="group">
    <%= f.label("敘述") %>
    <%= f.text_area :description %>
  </div>
  
  <div class="group">
    <%= f.label("數量") %>
    <%= f.text_field :quantity %>
  </div>
  
  <p><%= f.file_field :image %></p>
  
  <%= f.submit "Submit", :disable_with => 'Submiting...' %>


<% end %>